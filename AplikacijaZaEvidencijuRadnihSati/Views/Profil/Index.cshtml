
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_GlavnaAERS.cshtml";
}
@{
    AplikacijaZaEvidencijuRadnihSati.Models.Djelatnik djelatnik = (AplikacijaZaEvidencijuRadnihSati.Models.Djelatnik)Session["USER"];

}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<h2 class="text-center">Profil</h2>

<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-bottom: 10px;
        box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
    }
    h2{
        margin-top:2%;
        margin-bottom:2%;
    }
</style>



<div class="text-center">

    <div class="card col-sm-4">
        <div class="card-body">
            <img class="card-img-top" src="~/Slike/profile.png" alt="Card image cap" style="width: 13rem;">
            <h5 class="card-title">@djelatnik.Ime @djelatnik.Prezime</h5>
            <p class="card-text">Broj tima: @djelatnik.TimID</p>
            @{ switch (djelatnik.TipDjelatnikaID)
                {
                    case 1:
                        <p class="card-text">
                            Tip Djelatnika: Direkor
                        </p>
                        break;
                    case 2:
                        <p class="card-text">
                            Tip Djelatnika: Voditelj tima
                        </p>
                        break;
                    case 3:
                        <p class="card-text">
                            Tip Djelatnika: Zaposlenik
                        </p>
                        break;
                    case 4:
                        <p class="card-text">
                            Tip Djelatnika: Honorarni djelatnik
                        </p>
                        break;
                    case 5:
                        <p class="card-text">
                            Tip Djelatnika: Student
                        </p>
                        break;
                    default:
                        <p class="card-text">
                            Tip Djelatnika: Radnik
                        </p>
                        break;
                }
            }

            <p class="card-text">Email: @djelatnik.Email</p>
            <p class="card-text">Datum zaposlenja: @djelatnik.DatumZaposlenja.ToShortDateString()</p>
        </div>
    </div>
    @using (Html.BeginForm("Ispravi", "Profil"))
    {

    <div class="card col-sm-3">
        <div class="card-body">
            <h5 class="card-title">Promjena zaporke</h5>
            <label>Trenutna zaporka</label>
            <div class="form-group pass_show">
                <input type="hidden" id="KorisnickiEmail" value="@djelatnik.Email" name="KorisnickiEmail" />
                <input type="text" class="form-control" placeholder="Trenutna zaporka" id="TrenutniPass" name="TrenutniPass">
            </div>
            <label>Nova zaporka</label>
            <div class="form-group pass_show">
                <input type="text" class="form-control" placeholder="Nova zaporka" id="NoviPass" name="NoviPass">
            </div>
            <input type="reset" class="btn btn-danger">
            <button type="submit" class="btn btn-primary">@Resources.Resource.Spremi</button>
        </div>
    </div>
    }

</div>


